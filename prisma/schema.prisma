generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email       String @id @unique
  username    String @db.VarChar(20)
  birth       String
  password    String
  create_date String @default("xxxx-xx-xx")
  update_date String
}
